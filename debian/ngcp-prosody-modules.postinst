#!/bin/sh

case "$1" in
  configure)
    if which policy-rc.d >/dev/null && policy-rc.d prosody restart ; then
      echo "Restarting prosody service"
      ngcp-service prosody restart
    fi
    ;;
  abort-upgrade|abort-remove|abort-deconfigure)
    exit 0
    ;;
  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

